sync-wpm(){
	checkCRepo
	INFO "Syncing."
	if ! [ -d $DBPath/sync ]; then
		checkRW $RootDir $1
		WARN "The data base directory does not exist, creating it."
		mkdir -p $DBPath/sync
	else
		checkRW $RootDir "$1" "$2"
	fi
	cd $DBPath/sync
	for (( repo = 1; repo < $((($reposlong / 2) + 1)); repo++ )); do
		wget "${reposUrl[repo]}/${reposNames[repo]}.db" --show-progress -qO ${reposNames[repo]}.db
	done
}
